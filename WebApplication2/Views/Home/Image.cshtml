@using(Html.BeginForm("Image", "Home", FormMethod.Post, new { enctype = "multipart/form-data"})) 
{ <div> 
    <img id = "user_img"      height = "100"    width = "90"    style = "border:solid" /> </div>
    
    <div>
        <input type="file" title="search image" id="file" name="file" onchange="show(this)" />  </div>
        <div>
            UserId
        </div>
         <div > <input type = "text"       id = "txt_id"         name = "id" /> </div>
    
        <div>
            UserName
        </div> 
           <div > <input type = "text"        id = "txt_name"         name = "Name" /> </div>
        <div>
            <input type="submit" title="save" />  </div>
}



            <script src="~/Scripts/jquery-1.7.1.min.js"></script>
            <script type="text/javascript">
                function show(input) {
                    if (input.files && input.files[0]) {
                        var filerdr = new FileReader();
                        filerdr.onload = function (e) {
                            $('#user_img').attr('src', e.target.result);
                        }
                        filerdr.readAsDataURL(input.files[0]);
                    }
                }
            </script>
